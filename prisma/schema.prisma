generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Article {
  id          String   @id @default(cuid())
  title       String
  summary     String
  content     String
  titleJa     String?
  summaryJa   String?
  contentJa   String?
  url         String   @unique
  imageUrl    String?
  country     String
  brand       String?
  company     String?
  category    String   @default("general")
  source      String
  publishedAt DateTime
  collectedAt DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([country])
  @@index([brand])
  @@index([publishedAt])
}
